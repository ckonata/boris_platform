<div class="container" style="margin: 100px auto">
 <div class="row">
  <div class="col-6 offset-3">
   <h4>Agregar curso</h4>
   <form action="/admin/courses/addCourse" method="post">
    <div class="form-group">
     <input type="text" class="form-control" placeholder="Nombre" name="name">
    </div>
    <div class="form-group">
     <textarea type="text" class="form-control" placeholder="Descripcion" name="description"></textarea>
    </div>
    <div class="form-group">
     <label>Subir imagen: <input type="file" class="form-control" name="image" id="image" /></label>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
   </form>
   {{#if error}}
    <p>{{message}}</p>
   {{/if}}
  </div>
 </div> 
</div>