<div class="container mt-3">
 <div class="row">
  <div class="col-6 offset-3">
   <h4>Actualizar Curso</h4>
   <form action="/admin/courses/updateCourse" method="post" enctype="multipart/form-data">
    <div class="form-group">
     <input type="hidden" value="{{course.id}}" name="id">
    </div>
    <div class="form-group">
     <label for="name" class="text-primary fw-bold m-1">Nombre</label>
     <input id="name" type="text" class="form-control" placeholder="Nombre" name="name" value="{{course.name}}"></input>
    </div>
    <div class="form-group">
     <label for="description" class="text-primary fw-bold m-1">Descripcion</label>
     <textarea id="description" rows="4" cols="50" type="text" class="form-control" placeholder="Descripcion" name="description">{{course.description}}</textarea>
    </div>
    <div class="form-group">
     <label class="text-primary fw-bold m-1">Subir imagen:
     <input type="file" class="form-control" name="image" id="image" /></label>
     <label>
      <input type="checkbox" name="deleteImage" id="deleteImage" value="1">Â¿Desea eliminar la imagen actual?
     </label>
    <input type="hidden" name="originalImage" value="{{course.image}}">
    </div>
    <div class="form-group">
     <label for="imageDescription" class="text-primary fw-bold m-1">Descripcion imagen</label>
     <input id="imageDescription" type="text" class="form-control" placeholder="Descripcion Imange" name="imageDescription" value="{{course.imageDescription}}"></input>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Guardar</button>
   </form>
   {{#if error}}
    <p>{{message}}</p>
   {{/if}}
  </div>
 </div>
</div>