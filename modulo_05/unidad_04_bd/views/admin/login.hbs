<div class="container" style="margin-top:100px">
 <div class="row">
  <form action="/admin/login" method="post">
  <div class="mb-3 row">
   <div class="col-sm-10">
    <input type="text" class="form-control" id="inputUser" placeholder="Ingrese nombre de usuario" name="usuario">
   </div>
  </div>
  <div class="mb-3 row">
   <div class="col-sm-10">
    <input type="password" class="form-control" id="inputPassword" placeholder="Ingrese contraseña" name="password">
   </div>
  </div>

  {{#if error}}
  <p>Usuario o contraseña incorrectos</p>
  {{/if}}

  <button type="submit" class="btn btn-primary">Ingresar</button>
  </form>
 </div>
</div>